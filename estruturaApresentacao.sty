\setbeamertemplate{title page}{%
  \vskip0pt plus 1filll%
  \hspace{-12mm}
  \vspace{20mm}
  \begin{beamercolorbox}[wd=0.6\textwidth,sep=10pt,leftskip=8mm]{title}%
    {\ifdef{\@titreLabel}{{\usebeamerfont{title}\@titreLabel}{\ifdef{\@soustitreLabel}{{\usebeamerfont{title}~:}}{}}}{}}
  
    {\ifdef{\@soustitreLabel}{{\usebeamerfont{subtitle}\@soustitreLabel}}{}}
    
    {\ifdef{\@formationLabel}{{\usebeamerfont{author}\usebeamercolor[fg]{author}\textbf{Formation~: }\@formationLabel}}{}}
    
    {\ifdef{\@nomLabel}{{\usebeamerfont{author}\usebeamercolor[fg]{author}\@nomLabel}}{}}
    
    {\ifdef{\@auteurLabel}{{\usebeamerfont{author}\usebeamercolor[fg]{author}\textbf{Étudiant(e)~: }\@auteurLabel}}{}}
    
    {\ifdef{\@directeurLabel}{{\usebeamerfont{author}\usebeamercolor[fg]{author}\textbf{Directeur(rice)~: }\@directeurLabel}}{}}
    
    {\ifdef{\@codirecteurLabel}{\usebeamerfont{author}\usebeamercolor[fg]{author}\textbf{Co-directeur(rice)~: }\@codirecteurLabel}{}}
  
    {\ifdef{\@lieuLabel}{{\usebeamerfont{date}\usebeamercolor[fg]{date}\@lieuLabel,{ }\@jourLabel{ }\@moisLabel{ }\@anneeLabel}}{}}
  \end{beamercolorbox}
}

